@(participanteForm: Form[Participante])
@import helper._
@implicitFieldConstructor = @{ FieldConstructor(twitterBootstrapInput.render) }
@main(Html("Creacion de nuevo participante")) {
    <h3>Agregar participante</h3>
    @form(routes.Participantes.save()) {
        <fieldset>
        @inputText(participanteForm("numParticipante"), '_label -> "Numero de participante")
        @inputText(participanteForm("codSorteo"), '_label -> "Codigo de sorteo")
        @inputText(participanteForm("numPersona"), '_label -> "Numero de persona")
        
        </fieldset>
    <div class="actions">
        <input type="submit" value="Crea participante" class="btn primary"> or
        <a href="@routes.Sorteos.blank()" class="btn">Cancel</a>
    </div>
    }
}